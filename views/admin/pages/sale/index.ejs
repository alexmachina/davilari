<% include ../../templates/header %>
<div class="container">
  <div class="row">
    <header class="product-header col-xs-6">
      <h1>Produtos</h1>
    </header>

      <section class="col-sm-6 col-xs-12">
        
      <form action="/admin/promocao" method="GET">
     <span class="glyphicon glyphicon-search"></span>
      <input type="text" id="search" name="search" />
      <input type="submit" class="btn btn-default" id="search-button" type="button"
                                                                      value="Ok" />
      </form>
    </section>

    <article>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Promocao</th>
            <th>Descrição</th>
            <th>Subdescricao</th>
            <th>Link</th>
            <th>Ativa</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% sales.forEach(function(s) { %>
          <tr>
            <td> <%= s.name %> </td>
            <td> <%= s.description %> </td>
            <td> <%= s.subdescription %> </td>
            <td> <%= s.link %> </td>
            <td> <%= s.active%> </td>

            <td>
              <a href="/admin/promocao/<%= s.IdSale %>">
                <button class="btn btn-default">
                  <span class="glyphicon glyphicon-edit"></span>
                </button>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </article>

    <footer>
      <a href="/admin/promocao"><button class="btn btn-default">Novo</button>
    </footer>
  </div>
</div>

<% include ../../templates/footer.ejs %>
